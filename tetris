#ifndef TETRIS_H
#define TETRIS_H

#include <iostream>
#include <cstdlib>
#include <ctime>

const int WIDTH = 10;
const int HEIGHT = 20;

class Board {
public:
    Board();
    void draw();
    bool isGameOver();
    void clearLine(int line);
    void merge(int x, int y, char shape);
    bool canMerge(int x, int y);
    char getShape(int x, int y);
private:
    char board[HEIGHT][WIDTH];
};

class Tetromino {
public:
    Tetromino();
    void rotate();
    void moveLeft();
    void moveRight();
    void moveDown();
    bool canRotate(Board& board);
    bool canMoveLeft(Board& board);
    bool canMoveRight(Board& board);
    bool canMoveDown(Board& board);
    void merge(Board& board);
    char getShape(int x, int y);
private:
    char shape[4][4];
    int x, y;
};

class Tetris {
public:
    Tetris();
    void play();
private:
    Board board;
    Tetromino tetromino;
};

#endif
